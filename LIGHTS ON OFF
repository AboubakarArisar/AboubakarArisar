#include <iostream>
using namespace std;
int main()
{
	int iter;
for(int i=1; i<=5; i++)
{
	cout<<"How many iterations you want-->";
	cin>>iter;
	for(int j=1; j<=iter; j++)
	{
		if(j%2==0)
		{
			cout<<j<<".Light is OFF."<<endl;
		}
		else 
		{
			cout<<j<<".Light is ON."<<endl;
		}
	}
}
return 0;
}
